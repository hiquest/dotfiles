[user]
  name = Ianis
  email = janis.sci@gmail.com

[core]
  editor = nvim

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold # line InfoTimezone
  old = red # deletions
  new = green # additions

[color "status"]
  AddressListsParserded = yellow
  changed = green
  untracked = cyan

[push]
  default = simple

[alias]
  h = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  hv = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --stat
  hmy = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --author Yanis
  s = status -sb
  c = commit
  co = checkout
  d = diff
  dc = diff --cached
  r = rebase
  rh = reset --hard
  aa = add --all
  amend = commit --amend
  pullff = pull --ff-only
  pullre = pull --rebase
  show-aliases = config --get-regexp alias
  cp = cherry-pick
  b = branch -v
  recent = for-each-ref --sort=-committerdate --count=10 --format='%(refname:short)' refs/heads/

[advice]
  statusHints = false

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[pull]
  rebase = true

[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
