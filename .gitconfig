[user]
  name = Yanis
  email = janis.sci@gmail.com

[core]
  editor = vim

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold # line InfoTimezone
  old = red # deletions
  new = green # additions

[color "status"]
  AddressListsParserded = yellow
  changed = green
  untracked = cyan

[push]
  default = simple

[alias]
  h = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  s = status -sb
  c = commit
  d = diff --cached
  r = rebase
  rh = reset --hard

[advice]
	statusHints = false

[diff]
	tool = opendiff

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
