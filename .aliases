wps() {
  if [ -f ./bin/webpack-dev-server ]; then
    ./bin/webpack-dev-server
  elif [ -f ./script/webpack-dev-server ]; then
    ./script/webpack-dev-server
  else
    npm start
  fi
}

# =================
# Django
# =================
dj() {
  if [ -f ./manage.py ]; then
    python ./manage.py $*
  elif [ -f ./app/manage.py ]; then
    python ./app/manage.py $*
  else
    echo 'manage.py not found'
  fi
}

