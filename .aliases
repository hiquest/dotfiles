# =================
# Navigation/system
# =================
alias ..='cd ..'
alias x='exit'
alias j="z"         # https://github.com/rupa/z

# `o` with no arguments opens the current directory, otherwise opens the given
# location
function o() {
	if [ $# -eq 0 ]; then
		open .;
	else
		open "$@";
	fi;
}

mkcd() {
  mkdir $@ && cd $_
}

function bs() {
	if [ $# -eq 0 ]; then
		brew services list;
	else
		brew services "$@";
	fi;
}

